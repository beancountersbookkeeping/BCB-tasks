<div class="container">
<h1>Name: <%= @company.name %></h1>
User email: <%= User.convert_id_to_email(@company.user_id) %></br>
<h2>Tasks:</h2>
<% for @task in @tasks %>
  <%=@task.title%></br>
<% end %>
</br>
<%= link_to "New task", new_task_path(@company.id)%>
<%= link_to "Edit Company", edit_company_url(@company.id) %>
<%= link_to "Delete Company", delete_company_path(@company.id), class: 'btn btn-danger' %>
</div>
