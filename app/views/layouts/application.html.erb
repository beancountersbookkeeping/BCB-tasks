<!DOCTYPE html>
<html>
<head>
  <title>Tasks</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="/">BCB Tasks</a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="/">Home</a></li>
      <li><%= link_to "Tasks", root_path %></li>
      <li><%= link_to "Companies", companies_report_path %></li>  
      <li><%= link_to "Show companies", companies_path %></li>      
    </ul>
    <ul class="nav navbar-nav" style="float:right;">
      <% if user_signed_in? %>
       <li><%= link_to current_user.email, root_path %></li>        
       <li><%= link_to 'Edit profile', edit_user_registration_path, :class => 'float_right' %></li>
       <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, :class => 'float_right'  %></li>
      <% else %>        
       <li><%= link_to "Sign Up", new_user_registration_path, :class => 'float_right'  %></li>
       <li><%= link_to "Sign In", new_user_session_path, :class => 'float_right'  %></li>
      <% end %>
    </ul>
   </div>
  </nav>   

     <% if flash[:notice] != nil%>
       <div class="alert alert-success col-sm-4">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:notice] %>
       </div>
     <% elsif flash[:alert] %>
       <div class="alert alert-warning col-sm-4">
         <button type="button" class="close" data-dismiss="alert">&times;</button>
         <%= flash[:alert] %>
       </div>
     <% end %>
<div class="clear"></div>
<%= yield %>

</body>
</html>
